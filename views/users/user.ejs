<%- include('../layout/header.ejs') %> 
<br><br><br><br>
<h1 class="ml-2"><%= user.name %></h1>
<div class="ml-2"><%= user.email %></div>
<div class="ml-2">Member since: <%= user.createAt.getDate() %>/<%= user.createAt.getMonth() + 1 %>/<%= user.createAt.getFullYear() %></div>
<div id="portfolio-wrapper">
    <div class="container">
        <div class="row">
            <% videos.forEach(video => { %>
                 <% if(video.author == user.id) { %>
                    <div class="col-12  text-center my-1 border">
                        <!-- <a href="/<%= video.path %>" class="pop-img">
                            <img src="/<%= video.path %>" class="square-img" alt="">
                        </a> -->
                        <h2><%= video.title %></h2>
                        <p><%= video.description %></p>
                        <a href="/individual/<%= video.id %>" class="btn btn-info btn-sm ml-3" style="color: #fff;">View</a>
                    </div>
                    
                 <% } %>
            <% }) %> 
        </div>
    </div>
</div>

<%- include('../layout/footer.ejs') %>